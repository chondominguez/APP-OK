<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bc1414"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/electronica_button"
        android:layout_width="272"
        android:layout_height="63"
        android:layout_marginTop="20dp"
        android:background="@mipmap/boton"
        android:text="Electrónica"
        android:textAllCaps="false"
        android:textSize="30"
        android:textStyle="normal|bold"
        app:layout_constraintTop_toBottomOf="@+id/electrica_button"
        tools:layout_editor_absoluteX="66dp" />

    <Button
        android:id="@+id/mecanica_button"
        android:layout_width="272"
        android:layout_height="63"
        android:layout_marginTop="20dp"
        android:background="@mipmap/boton"
        android:text="Mecánica"
        android:textAllCaps="false"
        android:textSize="30"
        android:textStyle="normal|bold"
        app:layout_constraintTop_toBottomOf="@+id/electronica_button"
        tools:layout_editor_absoluteX="66dp" />

    <Button
        android:id="@+id/quimica_button"
        android:layout_width="272"
        android:layout_height="63"
        android:layout_marginTop="20dp"
        android:background="@mipmap/boton"
        android:text="Química"
        android:textAllCaps="false"
        android:textSize="30"
        android:textStyle="normal|bold"
        app:layout_constraintTop_toBottomOf="@+id/mecanica_button"
        tools:layout_editor_absoluteX="66dp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="114dp"
        android:layout_height="74dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/logo"
        tools:layout_editor_absoluteY="3dp" />

    <ImageButton
        android:id="@+id/goback"
        android:layout_width="50"
        android:layout_height="50"
        android:background="#bc1414"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/goback"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageButton
        android:id="@+id/home"
        android:layout_width="50"
        android:layout_height="50"
        android:background="#bc1414"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/home"
        tools:layout_editor_absoluteX="345dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/barra"
        android:layout_width="410"
        android:layout_height="3"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/negra"
        tools:layout_editor_absoluteY="77dp" />

    <Button
        android:id="@+id/computacion_button"
        android:layout_width="272"
        android:layout_height="63"
        android:background="@mipmap/boton"
        android:text="Computación"
        android:textAllCaps="false"
        android:textSize="30"
        android:textStyle="normal|bold"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="145dp" />

    <Button
        android:id="@+id/electrica_button"
        android:layout_width="272"
        android:layout_height="63"
        android:layout_marginTop="20dp"
        android:background="@mipmap/boton"
        android:text="Eléctrica"
        android:textAllCaps="false"
        android:textSize="30"
        android:textStyle="normal|bold"
        app:layout_constraintTop_toBottomOf="@+id/construcciones_button"
        tools:layout_editor_absoluteX="66dp" />

    <Button
        android:id="@+id/construcciones_button"
        android:layout_width="272"
        android:layout_height="63"
        android:layout_marginTop="20dp"
        android:background="@mipmap/boton"
        android:text="Construcciones"
        android:textAllCaps="false"
        android:textSize="30"
        android:textStyle="normal|bold"
        app:layout_constraintTop_toBottomOf="@+id/computacion_button"
        tools:layout_editor_absoluteX="66dp" />

</androidx.constraintlayout.widget.ConstraintLayout>