<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bc1414"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="114dp"
        android:layout_height="74dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/logo"
        tools:layout_editor_absoluteY="3dp" />

    <ImageButton
        android:id="@+id/goback"
        android:layout_width="50"
        android:layout_height="50"
        android:background="#bc1414"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/goback"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageButton
        android:id="@+id/home"
        android:layout_width="50"
        android:layout_height="50"
        android:background="#bc1414"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/home"
        tools:layout_editor_absoluteX="345dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/barra"
        android:layout_width="410"
        android:layout_height="3"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/negra"
        tools:layout_editor_absoluteY="77dp" />

    <TextView
        android:id="@+id/developer_text"
        android:layout_width="380dp"
        android:layout_height="108dp"
        android:text="Realizado por los alumnos de 6° CI 1°:"
        android:textColor="#000000"
        android:textSize="30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="102dp" />

    <TextView
        android:id="@+id/matias_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Álvarez, Matías"
        android:textColor="#000000"
        android:textSize="30"
        app:layout_constraintBottom_toTopOf="@+id/leandro_text"
        tools:layout_editor_absoluteX="81dp" />

    <TextView
        android:id="@+id/leandro_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Avalos, Leandro"
        android:textColor="#000000"
        android:textSize="30"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="224dp" />

    <TextView
        android:id="@+id/jonathan_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Dominguez, Jonathan"
        android:textColor="#000000"
        android:textSize="30"
        app:layout_constraintTop_toBottomOf="@+id/leandro_text"
        tools:layout_editor_absoluteX="81dp" />

    <TextView
        android:id="@+id/mateo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Pereyra, Mateo"
        android:textColor="#000000"
        android:textSize="30"
        app:layout_constraintTop_toBottomOf="@+id/jonathan_text"
        tools:layout_editor_absoluteX="81dp" />

    <TextView
        android:id="@+id/2020_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020"
        android:textColor="#000000"
        android:textSize="30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="675dp" />

</androidx.constraintlayout.widget.ConstraintLayout>