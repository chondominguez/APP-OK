<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bc1414"
    tools:context=".MenuEspecialidades">


    <ImageView
        android:id="@+id/barra"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="4dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:srcCompat="@mipmap/negra" />

    <ImageButton
        android:id="@+id/home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:background="#bc1414"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.848"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/home" />

    <ImageButton
        android:id="@+id/goback"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:background="#bc1414"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/logo"
        app:layout_constraintHorizontal_bias="0.163"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/goback" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="111dp"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/logo" />

    <Button
        android:id="@+id/boton_Electronica"
        android:layout_width="272dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/boton"
        android:onClick="IrAElectronica"
        android:text="@string/txt_Electronica"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_Electrica" />

    <Button
        android:id="@+id/boton_Mecanica"
        android:layout_width="272dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/boton"
        android:onClick="IrAMecanica"
        android:text="@string/txt_Mecanica"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_Electronica" />

    <Button
        android:id="@+id/boton_Quimica"
        android:layout_width="272dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/boton"
        android:onClick="IrAQuimica"
        android:text="@string/txt_Quimica"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_Mecanica" />

    <Button
        android:id="@+id/boton_Computacion"
        android:layout_width="272dp"
        android:layout_height="63dp"
        android:layout_marginTop="88dp"
        android:background="@mipmap/boton"
        android:onClick="IrAComputacion"
        android:text="@string/txt_Computacion"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <Button
        android:id="@+id/boton_Electrica"
        android:layout_width="272dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/boton"
        android:onClick="IrAElectrica"
        android:text="@string/txt_Electrica"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_Construcciones" />

    <Button
        android:id="@+id/boton_Construcciones"
        android:layout_width="272dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/boton"
        android:onClick="IrAConstrucciones"
        android:text="@string/txt_Construcciones"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton_Computacion" />


</androidx.constraintlayout.widget.ConstraintLayout>